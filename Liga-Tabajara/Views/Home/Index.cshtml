@model IEnumerable<Liga_Tabajara.Controllers.HomeController.ClassificacaoEntry>

@{
    ViewBag.Title = "Tabela de Classificação";
}

<main class="container py-4">

    <div class="text-center mb-4">
        <h1 class="display-4">Tabela de Pontos Corridos</h1>
        <p class="lead">Classificação atual, em estilo “Brasileirão”.</p>
    </div>

    <!-- Ações principais -->
    <div class="d-flex flex-wrap justify-content-center gap-3 mb-4">
        @using (Html.BeginForm("Generate", "Calendar", FormMethod.Post))
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-calendar-plus"></i> Gerar Calendário Automático
            </button>
        }
        <a class="btn btn-success" href="@Url.Action("Index", "Calendar")">
            <i class="bi bi-eye"></i> Ver Calendário
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <!-- Tabela de Classificação -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Classificação</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Posição</th>
                        <th>Time</th>
                        <th>J</th>
                        <th>V</th>
                        <th>E</th>
                        <th>D</th>
                        <th>GP</th>
                        <th>GC</th>
                        <th>SG</th>
                        <th>P</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var pos = 1;
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@pos</td>
                                <td>@c.Nome</td>
                                <td>@c.Jogos</td>
                                <td>@c.Vitorias</td>
                                <td>@c.Empates</td>
                                <td>@c.Derrotas</td>
                                <td>@c.GolsPro</td>
                                <td>@c.GolsContra</td>
                                <td>@c.SaldoGols</td>
                                <td>@c.Pontos</td>
                            </tr>
                            pos++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center">Nenhuma partida registrada.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</main>
