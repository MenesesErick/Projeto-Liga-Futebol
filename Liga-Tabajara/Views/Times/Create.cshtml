@model Time

@{
    ViewBag.Title = "Criar Novo Time";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">Cadastrar Novo Time</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", placeholder = "Nome do Time" })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control", placeholder = "Cidade" })
                    @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Estado, new { @class = "form-control", placeholder = "Estado" })
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.AnoFundacao, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.AnoFundacao, new { @class = "form-control", placeholder = "Ano de Fundação", type = "number", min = "1800", max = "2025" })
                    @Html.ValidationMessageFor(model => model.AnoFundacao, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Estadio, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Estadio, new { @class = "form-control", placeholder = "Estádio" })
                    @Html.ValidationMessageFor(model => model.Estadio, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.CapacidadeEstadio, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.CapacidadeEstadio, new { @class = "form-control", placeholder = "Capacidade do Estádio", type = "number", min = "0" })
                    @Html.ValidationMessageFor(model => model.CapacidadeEstadio, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.CorUniformePrincipal, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.CorUniformePrincipal, new { @class = "form-control", placeholder = "Cor do Uniforme Principal" })
                    @Html.ValidationMessageFor(model => model.CorUniformePrincipal, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.CorUniformeSecundario, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.CorUniformeSecundario, new { @class = "form-control", placeholder = "Cor do Uniforme Secundário" })
                    @Html.ValidationMessageFor(model => model.CorUniformeSecundario, "", new { @class = "text-danger" })
                </div>

                <div class="form-check mb-4">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "form-check-label" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>
