@model Time

@{
    ViewBag.Title = "Editar Time";
}

<div class="container mt-4">
    <h2>Editar Time</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            @Html.HiddenFor(m => m.Id)

            <label for="Nome" class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="Cidade" class="col-sm-2 col-form-label">Cidade</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="Estado" class="col-sm-2 col-form-label">Estado</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="AnoFundacao" class="col-sm-2 col-form-label">Ano de Fundação</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.AnoFundacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AnoFundacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="Estadio" class="col-sm-2 col-form-label">Estádio</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Estadio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Estadio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="CapacidadeEstadio" class="col-sm-2 col-form-label">Capacidade</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.CapacidadeEstadio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CapacidadeEstadio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="CorUniformePrincipal" class="col-sm-2 col-form-label">Uniforme Principal</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.CorUniformePrincipal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CorUniformePrincipal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <label for="CorUniformeSecundario" class="col-sm-2 col-form-label">Uniforme Secundário</label>
            <div class="col-sm-10">
                @Html.EditorFor(m => m.CorUniformeSecundario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CorUniformeSecundario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-2">Status</div>
            <div class="col-sm-10">
                <div class="form-check form-switch">
                    @Html.CheckBoxFor(m => m.Status, new { @class = "form-check-input", role = "switch", id = "Status" })
                    <label class="form-check-label" for="Status">
                        @(Model.Status ? "Ativo" : "Inativo")
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-primary me-2">Salvar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
