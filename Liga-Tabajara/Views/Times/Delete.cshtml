@model Time

@{
    ViewBag.Title = "Excluir Time";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Confirmar Exclusão</h3>
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-sm btn-light" })
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Tem certeza de que deseja excluir este time?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Cidade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Cidade)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Estado)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Estado)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.AnoFundacao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.AnoFundacao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Estadio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Estadio)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CapacidadeEstadio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CapacidadeEstadio)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CorUniformePrincipal)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CorUniformePrincipal)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CorUniformeSecundario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CorUniformeSecundario)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Status)</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status ? "bg-success" : "bg-secondary")">
                        @(Model.Status ? "Ativo" : "Inativo")
                    </span>
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger me-2">Excluir</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
