@model IEnumerable<Time>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Times</h2>
        @Html.ActionLink("Criar Novo", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Nome)</th>
                    <th>@Html.DisplayNameFor(m => m.Cidade)</th>
                    <th>@Html.DisplayNameFor(m => m.Estado)</th>
                    <th>@Html.DisplayNameFor(m => m.AnoFundacao)</th>
                    <th>@Html.DisplayNameFor(m => m.Estadio)</th>
                    <th>@Html.DisplayNameFor(m => m.CapacidadeEstadio)</th>
                    <th>@Html.DisplayNameFor(m => m.CorUniformePrincipal)</th>
                    <th>@Html.DisplayNameFor(m => m.CorUniformeSecundario)</th>
                    <th>@Html.DisplayNameFor(m => m.Status)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.AnoFundacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estadio)</td>
                        <td>@Html.DisplayFor(modelItem => item.CapacidadeEstadio)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorUniformePrincipal)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorUniformeSecundario)</td>
                        <td>
                            <span class='badge @(item.Status ? "bg-success" : "bg-secondary")'>
                                @(item.Status ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary me-1" })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1" })
                                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
