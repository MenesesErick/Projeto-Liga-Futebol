@model Partida

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Excluir Partida";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-trash-fill me-2 text-danger"></i>
        Excluir Partida
    </h2>

    <div class="card shadow-sm mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-triangle-fill me-1"></i>
            Tem certeza que deseja excluir esta partida?
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-end">Time Casa</dt>
                <dd class="col-sm-8">@Model.TimeCasa.Nome</dd>

                <dt class="col-sm-4 text-end">Time Visitante</dt>
                <dd class="col-sm-8">@Model.TimeVisitante.Nome</dd>

                <dt class="col-sm-4 text-end">Data e Hora</dt>
                <dd class="col-sm-8">@Model.DataHora.ToString("dd/MM/yyyy 'às' HH:mm")</dd>

                <dt class="col-sm-4 text-end">Placar</dt>
                <dd class="col-sm-8">
                    <span class="fw-bold text-primary">@Model.GolsCasa</span>
                    <span class="mx-2">×</span>
                    <span class="fw-bold text-danger">@Model.GolsVisitante</span>
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash me-1"></i>Excluir
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Voltar
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
