@model Jogador

@{
    ViewBag.Title = "Detalhes do Jogador";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-person-lines-fill me-2"></i>Detalhes do Jogador</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Time.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Time.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                <dd class="col-sm-9">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nacionalidade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nacionalidade)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Posicao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Posicao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumeroCamisa)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroCamisa)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Altura)</dt>
                <dd class="col-sm-9">@Model.Altura.ToString("F2") m</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Peso)</dt>
                <dd class="col-sm-9">@Model.Peso.ToString("F1") kg</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PePreferido)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PePreferido)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end">
        <a href="@Url.Action("Edit", "Jogadores", new { id = Model.Id })" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil me-1"></i>Editar
        </a>
        <a href="@Url.Action("Index", "Jogadores")" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
