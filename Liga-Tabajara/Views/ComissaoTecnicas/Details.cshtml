@model ComissaoTecnica

@{
    ViewBag.Title = "Detalhes da Comissão Técnica";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-info-circle"></i> Detalhes da Comissão Técnica</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4>Comissão Técnica</h4>
            <hr />
            <dl class="row">
                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Time)</dt>
                <dd class="col-md-9">@Model.Time.Nome</dd> <!-- Acessa diretamente a propriedade Time.Nome -->

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-md-9">@Model.Nome</dd> <!-- Acessa diretamente a propriedade Nome -->

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Cargo)</dt>
                <dd class="col-md-9">@Model.Cargo</dd> <!-- Acessa diretamente a propriedade Cargo -->

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                <dd class="col-md-9">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd> <!-- Acessa diretamente a propriedade DataNascimento -->
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
        </p>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
}
