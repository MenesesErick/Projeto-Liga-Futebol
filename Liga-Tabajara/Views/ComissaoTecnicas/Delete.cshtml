@model ComissaoTecnica

@{
    ViewBag.Title = "Excluir Comissão Técnica";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-trash"></i> Excluir Comissão Técnica</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4>Comissão Técnica</h4>
            <hr />
            <dl class="row">
                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Time.Nome)</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Time.Nome)</dd>

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.Cargo)</dt>
                <dd class="col-md-9">@Html.DisplayFor(model => model.Cargo)</dd>

                <dt class="col-md-3">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                <dd class="col-md-9">@String.Format("{0:dd/MM/yyyy}", Model.DataNascimento)</dd>            </dl>

            <h3 class="text-danger">Tem certeza de que deseja excluir este item?</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Excluir
                    </button>
                    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
}
